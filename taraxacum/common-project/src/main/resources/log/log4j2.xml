<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG">

	<properties>
		<Property name="logDir">log</Property>
		<Property name="thresholdFilter">DEBUG</Property>
		<Property name="defaultCharset">UTF-8</Property>
		<Property name="patternLayout">%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] [%thread] %logger{36} - %msg%n</Property>
	</properties>

	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout charset="${defaultCharset}" pattern="${patternLayout}"/>
			<ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
		</Console>

		<File name="File" fileName="${logDir}/file/file.log">
			<PatternLayout charset="${defaultCharset}" pattern="${patternLayout}"/>
			<ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
		</File>

		<!-- 按 log 文件大小 -->
		<RollingFile name="RollingFileTargetSize"
			fileName="${logDir}/rolling-size/rollingSize.log"
			filePattern="${logDir}/rolling-size/$${date:yyyyMMdd}/rollingSize-%d{yyyyMMddHH}-%i.log.gz">
			<ThresholdFilter level="${thresholdFilter}" onMatch="ACCEPT" onMismatch="DENY"/>
			<PatternLayout charset="${defaultCharset}" pattern="${patternLayout}"/>
			<Policies>
				<SizeBasedTriggeringPolicy size="2MB"/>
			</Policies>
			<DefaultRolloverStrategy max="20"/>
		</RollingFile>

		<!-- 按 log 时间 -->
		<RollingFile name="RollingFileTargetTime"
			fileName="${logDir}/rolling-time/rollingTime.log"
			filePattern="${logDir}/rolling-time/$${date:yyyyMMdd}/rollingTime-%d{yyyyMMddHH}-%i.log.gz">
			<PatternLayout charset="${defaultCharset}" pattern="${patternLayout}"/>
			<ThresholdFilter level="${thresholdFilter}" onMatch="ACCEPT" onMismatch="DENY"/>
			<Policies>
				<TimeBasedTriggeringPolicy modulate="true" interval="1"/>
			</Policies>
			<DefaultRolloverStrategy max="20">
				<!-- 删除 30 前的日志 -->
				<Delete basePath="${logDir}/rolling-time" maxDepth="2">
					<IfFileName glob="*/*.log.gz"/>
					<IfLastModified age="30d"/>
				</Delete>
			</DefaultRolloverStrategy>
		</RollingFile>

		<RollingFile name="RollingFileTargetSizeTime"
			fileName="${logDir}/rolling-size-time/rollingSizeTime.log"
			filePattern="${logDir}/rolling-size-time/$${date:yyyyMMdd}/rollingSizeTime-%d{yyyyMMddHH}-%i.log.gz">
			<!-- 控制台只输出level及以上级别的信息（onMatch），等级以下的直接拒绝（onMismatch） -->
			<ThresholdFilter level="${thresholdFilter}" onMatch="ACCEPT" onMismatch="DENY"/>
			<PatternLayout charset="${defaultCharset}" pattern="${patternLayout}"/>
			<Policies>
				<TimeBasedTriggeringPolicy modulate="true" interval="1"/>
				<SizeBasedTriggeringPolicy size="2MB"/>
			</Policies>
			<DefaultRolloverStrategy max="20"/>
		</RollingFile>
	</Appenders>

	<Loggers>
		<Logger name="org.springframework" level="INFO" additivity="false">
			<AppenderRef ref="Console"/>
		</Logger>
		<Root level="TRACE">
			<AppenderRef ref="Console"/>
			<AppenderRef ref="File"/>
			<AppenderRef ref="RollingFileTargetSize"/>
			<AppenderRef ref="RollingFileTargetTime"/>
			<AppenderRef ref="RollingFileTargetSizeTime"/>
		</Root>
	</Loggers>
</Configuration>